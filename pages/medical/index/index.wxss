  font-size: 27rpx;
  }

/*城市搜索*/
.container{
  width: 100%;
  background-color: red;
  position: absolute;
   z-index: 3;
   top: 75rpx;
   left: -100%;
   padding: 0;}
.city{
  width: 100%;
  height: 600rpx;
  opacity: 1;
  position: relative;
  z-index: 5;}
   
.brand{width:100%;background:#fff;color:#000;}
.model{background: #000;position:fixed;top:0;left:0;z-index:1;opacity: 0.3;}
/*内容块*/
/*内容块*/
/*内容块*/
/*内容块*/
.city .content{
  width: 100%;
  height: 86%;
}
/*条件选择块*/
.city .content .condition{
  width: 35%;
  height: 100%;
  float: left;
  background-color: #F2F2F2;
  overflow-y:auto;
  box-shadow:inset -2px 0 0px 0px #E8E7E7;}

.city .content .condition view { transition: all 0.3s ease-in-out; }
.city .content .condition view:first-child.active { border-top: none; }
.city .content .condition view.active { background: #fff; border-top: 1px solid #999; border-bottom: 1px solid #E8E7E7; }

.city .content .condition view { transition: all 0.3s ease-in-out; }
.city .content .condition view:first-child.active { border-top: none; }
.city .content .condition view.active { background: #fff; border-top: 1px solid #E8E7E7; border-bottom: 1px solid #E8E7E7; }
.city .content .detailed .area.active { background: #fddadd; color: black;}

.city .content .condition .one{
  width: 100%;
  line-height: 80rpx;
  text-align: center;
  font-size: 26rpx;
  letter-spacing: 3rpx;} 

.tabChange{
  background-color: white;}  
/*区域划分详页*/   
.city .content .detailed{
  width: 65%;
  height: 100%;
  float: left;
  background-color: white;
  overflow-y:auto; }
.city .content .detailed .area{ 
  width: 80%;
  line-height: 80rpx;
  text-align: left;
  margin-left: 20%;
  padding-left: 14%;
  box-sizing: border-box;
  border-bottom: 1px gainsboro solid;
  font-size: 25rpx;}  
.city .bottom{
  width: 100%;
  height: 14%;
  box-shadow: -0.5rpx 10rpx 5rpx #999;} 
.city .bottom .empty{
  width: 35%;
  height: 100%;
  background-color: white;
  display: inline-block;
  text-align: center;
  font-size: 26rpx;
  line-height: 80rpx;
  letter-spacing: 3rpx;}  
.city .bottom .yes{
  width: 65%;
  height: 100%;
  display: inline-block;
  color: white;
  text-align: center;
  font-size: 26rpx;
  line-height: 80rpx;
  letter-spacing: 3rpx;
  border-top: 2rpx solid gray;
  background: #f54556;
   }  

