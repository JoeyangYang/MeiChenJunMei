/*选择条件筛选酒店*/
.nav{
  width: 100%;
  line-height: 70rpx;
  font-size: 34rpx;
  color: gray;
  box-shadow: 0rpx 4rpx 3rpx #f54556;
  position: relative;
  z-index: 100;
  opacity: 1;
  }
  .nav text{color:#dddddd;}
.nav .left{
  width: 33%;
  display: inline-block;
  text-align: center;
  font-size: 27rpx;}
.nav image{
  width: 21rpx;
  height: 10rpx;
  margin-left: 5%;
  transform: rotate(0deg);
  margin-bottom: 2%;
  }

 .nav >view:nth-child(1).change1{color: black;}
.nav >view:nth-child(2).change2{color: black;}
.nav >view:nth-child(3).change3{color: black;} 
.nav image{transition: all 0.3s ease-in-out;}
