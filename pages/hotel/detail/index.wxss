/*隐藏块*/
.test{
  width: 90%;
  height: 0rpx;
  transition: all 0.3s ease-in-out;
  overflow: hidden;
  font-size: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-radius: 12rpx;}
.test.active { 
  height: 80rpx; 
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  line-height: 80rpx;
  background-color: white;}
.test .discount{
  line-height: 80rpx;
  width: 40%;
  float: left;}
.test .discount1{
  line-height: 80rpx;
  width: 15%;
  text-align: center;
  float: left;
  height: 80rpx;
  overflow: hidden;
  text-overflow:ellipsis;/*文字隐藏后添加省略号*/
  white-space:nowrap;/*强制不换行*/} 
.test .discount2{
  width: 30%;
  color: #ACACAC;
  text-align: right;}  
.test .discount1 button{
  width: 90%;
  line-height: 50rpx;
  font-size: 25rpx;
  color: white;
  margin-top: 15rpx;
  padding: 0;}  

/*酒店设备*/
.supply{
  width: 90%;
  height: 120rpx;
  background-color: white;
  margin-top: 30rpx;
  overflow-x: auto;
  border-radius: 12rpx;}  
.supply .last{
  width: 20%;
  height: 100%;
  float: left;
  font-size: 26rpx;
  color: gainsboro;}
.supply .last .one{
  width: 100%;
  height: 60%;}
.supply .last .one image{
  width: 40%;
  height: 64%;
  margin-left: 30%;
  margin-top: 18%;}
.supply .last .two{
  width: 100%;
  height: 40%;
  text-align: center;
  color: #C1C1C1;
  line-height: 40rpx;
  font-size: 22rpx;}        

/*温馨提示*/
.prompt{
  width: 90%;
  line-height: 45rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  color: #C1C1C1;
  font-size: 25rpx;}       