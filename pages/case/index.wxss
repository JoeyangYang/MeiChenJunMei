/* pages/case/index.wxss */
.case_box{}
.case_box .bg_black{width:100%;height:4rpx;background: #000;}
.case_box .bg_grey{width:100%;height:4rpx;background: #f3f3f3;margin-top:40rpx;}
.case_box .wrap_box{margin-top:40rpx;}
.case_box .wrap_box:last-child{margin-bottom:60rpx;}
.case_box .wrap_box:last-child .line{display: none;}
.case_box .wrap{display: flex;width:99.5%;}
.case_box .wrap .content{flex-direction: row;width:45%;margin:0 10%;}
.case_box .wrap .content text{display: inline-flex;text-align: center;font-size:24rpx;justify-content: center;align-items: center;width:100%;}
.case_box .wrap .content:nth-child(3n){margin-left:2%;}
.case_box .wrap .content:nth-child(3n+1){margin-right:2%;}
.case_box .wrap .content image{width:100%;height:200rpx;}
.case_box .line{width:95%;background: #f4f4f4;height:4rpx;margin-left:5%;margin-top:26rpx;}
.case_box .wrap .img{display: flex;justify-content: center;align-items: center;}
.case_box .wrap .arrow{width:58rpx;height:50rpx;}
